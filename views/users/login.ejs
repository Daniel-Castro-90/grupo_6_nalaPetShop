<!DOCTYPE html>
<html lang="es">
    <head>
        <%- include('../partials/head.ejs') %>
    </head>

    <body>
        <%- include('../partials/header.ejs') %>
<main>
    <div class="contenedor-accesousuario">
        <section class="ingreso">
            <a class="boton-ingreso">
                <h4>Ingresá</h4>
            </a>
            <a href="/users/register" id="linkIngreso" class="boton-registro selected">
                <h4>Registrate</h4>
            </a>
        </section>
        <section>
            <form class="formulario-ingreso" action="/users/login" method="POST">
                <div class="contenedor-login">
                    <div>
                        <div class="items-registro">
                            <label for="email">E-MAIL</label>
                            <input type="email" id="email" name="email" />
                        </div>
                        <div class="items-registro">
                            <label for="password">CONTRASEÑA</label>
                            <input type="password" id="password" name="password" />
                        </div>
                        <div>
                            <div>
                                <input type="checkbox" name="user_id">
                                <label>Recordar</label>
                            </div>
                            <div>
                                <a href="/resetting/request" class="forgot-pass">
                                    ¿Olvidaste la contraseña?
                                </a>
                            </div>
                        </div>
                        <div class="boton-enter"><button type="submit" value="entrar">ENTRAR</button></div>
                    </div>
                </div>
            </form>

        </section>
    </div>
</main>
<%- include('../partials/footer.ejs') %>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const linkRegistro = document.getElementById('linkRegistro');
        const linkIngreso = document.getElementById('linkIngreso');

        linkRegistro.addEventListener('click', () => {
            linkRegistro.classList.add('selected');
            linkIngreso.classList.remove('selected');
        });
    });
</script>
    </body>
</html>