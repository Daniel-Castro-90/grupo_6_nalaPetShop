<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('../partials/head') %>

</head>

<body>
    <%- include('../partials/header') %>

        <main class="mt-5 pt-4">

            <div class="tarjeta">
                <h2>Hola! üëã <%= locals.userLogged.email%></h2>
                <img class="tarjeta-img" src="<%= locals.userLogged.image %>" alt="Imagen del Producto">
                <h2><%= locals.product && product.name %></h2>
                <p class="tarjeta-title">Tel√©fono: <%= locals.userLogged.tel %></p>
                <p class="tarjeta-title">DNI: <%= locals.userLogged.dni %></p>
                <a href="/products/productCart" ><button class="tarjeta-button" rel="nofollow">¬°Seguir Comprando!</button></a>
                <a href="/users/logout" ><button class="tarjeta-button">SalirüèÉ</button></a>
              </div>
  
            </div>
                </div>
                <div class="table-container">
                    <div class="">
                        <div class="titulos">
                            <h3>Mis Pedidos</h3>
                        </div>
                        <div class="">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th style="width: 70px;">
                                            <strong>#</strong>
                                        </th>
                                        <th class="" style="width: 180px;">
                                            <strong>Fecha de Pedido</strong>
                                        </th>
                                        <th class="" style="width: 180px;">
                                            <strong>M√©todo de Env√≠o</strong>
                                        </th>
                                        <th class="" style="width: 180px;">
                                            <strong>Medio de Pago</strong>
                                        </th>
                                        <th>
                                            <strong>Total</strong>
                                        </th>
                                        <th style="width: 100px;"></th>
                                    </tr>
                                </thead>
                            <tbody>
                                <% orders.forEach((order, index) => { %>
                                    <tr>
                                        <th scope="row">
                                            <%= index + 1 %>
                                        </th>
                                        <td>
                                            <%= new Intl.DateTimeFormat('es-ES', {year:'numeric', month:'numeric', day:'2-digit', hour:'numeric', minute:'numeric'}).format(order.createdAt) %>
                                        </td>
                                        <td>
                                            <%= order.shippingMethod %>
                                        </td>
                                        <td>
                                            <%= order.paymentMethod %>
                                        </td>
                                        <td>$ <%= order.total %>
                                        </td>
                                        <td style="width: 180px;"><a href="<%= `/products/order/${order.id}`%>"><i class="eye-column">Clic para verüîç</i></a>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
