<%- include('../partials/header.ejs') %>
    <main>
        <form class="container-form-product" action="/products/productEditor/:idProduct/update?_method=PUT" method="POST">
            <div class="form-product">
                <h4>EDITAR PRODUCTO</h4>
                <div>
                    <div class="items-form-product">
                        <label for="text">NOMBRE DEL PRODUCTO</label>
                        <input type="text" name="producto" placeholder="Ingrese el nombre del producto" value="<%= productToEdit.name %>" />
                    </div>
                    <div class="items-form-product">
                        <label for="text">DESCRIPCION</label>
                        <input type="text" id="descripcion" name="texto" placeholder="Ingrese descripcion" />
                    </div>

                    <div class="items-form-product">
                        <div class="items-form-product-selects">
                            <div>
                                <h5>CALIDAD</h5>
                                <select>
                                    <option>Baja</option>
                                    <option>Media</option>
                                    <option>Alta</option>
                                </select>
                            </div>
                            <div>
                                <h5>MEDICAMENTO</h5>
                                <select>
                                    <option>Con medicamentos</option>
                                    <option>Necesidades especiales</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="items-form-product">
                        <label for="text">CANTIDAD</label>
                        <input type="texto" id="cantidad" name="texto" placeholder="Ingrese kg" />
                    </div>
                    <div class="items-form-product">
                        <label for="number">PRECIO</label>
                        <input type="number" id="precio" name="number" placeholder="Ingrese precio" />
                    </div>
                    <div class="items-form-product"><label>Imagen producto:<input type="file" name="imagen"></label>
                    </div>
                </div>
                <div class="button-editor-product">
                    <div class="boton-submit"><button type="submit">ELIMINAR PRODUCTO</button></div>
                    <div class="boton-submit"><button type="submit">ACTUALIZAR DATOS</button></div>
                </div>
            </div>
        </form>
    </main>
    <%- include('../partials/footer.ejs') %>