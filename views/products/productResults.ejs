<%- include('../partials/header.ejs') %>
<main>
    <div class="create-product-button"><a href="/products/productCreation"><button type="submit"><img src="/images/icons8-más.svg">CREAR NUEVO PRODUCTO</button></a></div>
 <%- include('../partials/filter.ejs') %>
    <section class="Gatos">
        <h3 class="titulares">Resultados según tu búsqueda:</h3>
        <div class="producto">
            <% locals.productResults && productResults.forEach(productResults => { %>
            <article>
                <img src="/images/products/<%= productResults.image %>" alt="Imagen Producto Gatos" class="img-producto"width="300px">
                <div class="main-article">
                    <a href="/products/productDetail/<%= productResults.id %>"><h4 class="Descripcion"><%= productResults.name %></h4></a>
                    <p class="precio"> $<%= productResults.price %> </p>
                    <p class="package"> Presentación en: <%= productResults.package %>Kg </p>
                    <a href="/descriptionCart" data-quantity="1" class="boton-producto" rel="nofollow">Comprar</a>
                    <div class="boton-producto"><a href="products/productEditor"><button type="submit">Editar</button></a></div>
                </div>
            </article>
            <% }) %>
        </div>
    </section> 
</main>
<%- include('../partials/footer.ejs') %>